<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.qingz.zhiqiang.mapper.UserMapper">
    <select id="get" parameterType="Student" resultType="Student">
        select * from student
        <where>
            <if test="id != null and id != 0">
                and id = ${id}
            </if>
        </where>
    </select>

    <insert id="add" parameterType="Student" useGeneratedKeys="true" keyColumn="id">
        insert into student(sno,password,name) values(#{sno}, #{password},#{name})
    </insert>
</mapper>